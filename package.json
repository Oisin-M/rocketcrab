{
    "name": "rocketcrab",
    "version": "0.0.1",
    "author": "Tanner Krewson",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon",
        "build": "run-s build:client build:server",
        "build:client": "next build",
        "build:server": "tsc --project tsconfig.server.json",
        "start": "cross-env NODE_ENV=production node dist/server/index.js",
        "type-check": "tsc --pretty --noEmit",
        "format": "prettier --write **/*.{js,ts,tsx,json,yml}",
        "lint": "eslint . --ext ts --ext tsx --ext js",
        "lint:staged": "lint-staged",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:all": "run-s lint type-check test",
        "test:coverage": "jest --coverage"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-s lint:staged type-check test"
        }
    },
    "lint-staged": {
        "*.@(js|ts|tsx|json)": [
            "npm run lint",
            "npm run format"
        ]
    },
    "dependencies": {
        "@zeit-ui/react": "^1.8.0-canary.8",
        "body-parser": "^1.19.0",
        "cross-env": "^7.0.2",
        "express": "^4.17.1",
        "fetch-cookie": "^0.10.1",
        "fontsource-inconsolata": "^3.0.5",
        "next": "^9.5.1",
        "nookies": "^2.4.0",
        "phonetic-alphabet-converter": "^0.2.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-ga": "^3.1.2",
        "react-spinners-kit": "^1.9.1",
        "socket.io": "^2.3.0",
        "ws": "^7.3.1"
    },
    "devDependencies": {
        "@testing-library/react": "^10.4.8",
        "@types/express": "^4.17.7",
        "@types/jest": "^26.0.9",
        "@types/node": "^14.0.27",
        "@types/react": "^16.9.45",
        "@types/socket.io": "^2.1.10",
        "@types/testing-library__react": "^10.2.0",
        "@types/webpack-env": "^1.15.2",
        "@types/ws": "^7.2.6",
        "@typescript-eslint/eslint-plugin": "^4.0.0-alpha.5",
        "@typescript-eslint/parser": "^4.0.0-alpha.5",
        "babel-jest": "^26.2.2",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-react": "^7.20.5",
        "husky": "^4.2.5",
        "jest": "^26.2.2",
        "jest-watch-typeahead": "^0.6.0",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.2",
        "typescript": "^4.0.1-rc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tannerkrewson/rocketcrab.git"
    },
    "bugs": {
        "url": "https://github.com/tannerkrewson/rocketcrab/issues"
    },
    "homepage": "https://github.com/tannerkrewson/rocketcrab#readme"
}
